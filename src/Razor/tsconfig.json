{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6"
        ],
        "declaration": true,
        "strict": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "skipDefaultLibCheck": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "rootDirs": [
            "src/Microsoft.AspNetCore.Razor.VSCode/",
            "src/Microsoft.AspNetCore.Razor.VSCode.Extension/",
            "test/Microsoft.AspNetCore.Razor.VSCode.Grammar.Test/",
            "test/Microsoft.AspNetCore.Razor.VSCode.Test/",
            "test/VSCode.FunctionalTest/"
        ],
        "sourceMap": true,
        "baseUrl": ".",
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}